= form_for @snippet do |f|
  - if @snippet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@snippet.errors.count, "error")} prohibited this snippet from being saved:"
      %ul
        - @snippet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :language
    = f.select :language, @languages

  .field
    = f.label :code
    = f.text_area :code, :rows => 10
  .field
    = f.label :description
    = f.text_area :description, :rows => 10
  .actions
    = f.submit 'Save', :class => 'button'
